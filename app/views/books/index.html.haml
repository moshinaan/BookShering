.container

  = form_tag results_path, method: :get, role: 'search' do
    = text_field_tag :query, params[:query]
    = submit_tag "Искать", name: nil
  = yield

  %table.table
    %thead
      %tr
        %th= sort_link(@q, :id, "#")
        %th= sort_link(@q, :name, "Название")
        %th= sort_link(@q, :author_id, "Автор")
        %th
    %tbody
      - @books.each do |book|
        %tr
          %td= book.id
          %td= book.name
          %td= book.author_id
          %td кнопка показать книгу
    = paginate @books